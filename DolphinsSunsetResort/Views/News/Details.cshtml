@model DolphinsSunsetResort.Models.News


<body>
	<div class="container mt-5">
		<div class="row justify-content-center">
			<div class="col-12 col-md-10 col-lg-8">
				<div class="card shadow-sm">
					@if (Model.Image != null)
					{
						<img src="data:@Model.Image.ContentType;base64,@Convert.ToBase64String(Model.Image.Content)"
						 alt="@Model.Title"
						 class="card-img-top news-image img-fluid object-fit-scale border rounded " style="max-height: 300px;" />
					}
					<div class="card-body">
						<h1 class="card-title text-center mb-4">@Model.Title</h1>
						<pre class="card-text" style="white-space: pre-wrap; word-wrap: break-word;">@Html.Raw(Model.Content)</pre>
					</div>
					<div class="card-footer ">
					<div class="d-flex justify-content-between pt-2">
						<a href="@Url.Action("Index", "News")" class="btn btn-secondary">Back</a>
					</div>
					<div class=" text-muted text-end">
						Published on: @Model.PublishedDate.ToString("MMMM dd, yyyy")
					</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>
