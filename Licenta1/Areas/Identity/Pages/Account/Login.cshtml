@page
@model LoginModel

@{
	ViewData["Title"] = "Log in";
	Layout = "~/Areas/Identity/Pages/_AuthLayout.cshtml";
}


<div class="row justify-content-center">
	<div class="col-md-10">
		<section>
			<form id="account" method="post" autocomplete="off">
				<h2>Welcome back!</h2>
				<hr />
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-floating">
					<input asp-for="Input.Email" class="form-control" aria-required="true" />
					<label asp-for="Input.Email" class="form-label"></label>
					<span asp-validation-for="Input.Email" class="text-danger"></span>
				</div>
				<div class="form-floating">
					<input asp-for="Input.Password" class="form-control" id="passwordField" aria-required="true" />
					<label asp-for="Input.Password" class="form-label"></label>
					<span asp-validation-for="Input.Password" class="text-danger"></span>
					<button type="button" class="toggle-password" data-target="passwordField"
							style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%); background: none; border: none;">
						👁️
					</button>

				</div>
				<div>
					<div class="checkbox">
						<label asp-for="Input.RememberMe" class="form-label">
							<input class="form-check-input" asp-for="Input.RememberMe" />
							@Html.DisplayNameFor(m => m.Input.RememberMe)
						</label>
					</div>
				</div>
				<div>
					<button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
				</div>
				<div>
					<p>
						<a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
					</p>
					@* <p>
					<a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
					</p>*@
				</div>
			</form>
		</section>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
<script src="~/js/togglePassword.js" asp-append-version="true"></script>