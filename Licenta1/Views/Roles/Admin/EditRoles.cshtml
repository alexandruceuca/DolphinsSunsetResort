@using DolphinsSunsetResort.Views.ViewsModel
@model EditRolesViewModel

@{
    ViewData["Title"] = "Edit Roles - " + Model.UserName;
}

<h1>@ViewData["Title"]</h1>

<form method="post" asp-action="EditRoles">
    <div class="form-group">
        <h3>Roles for @Model.UserName</h3>

        @foreach (var role in Model.Roles)
        {
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="@role.Name" name="selectedRoles" value="@role.Name"
                    @(Model.UserRoles.Contains(role.Name) ? "checked" : "") />
                    <label class="form-check-label" for="@role.Name">@role.Name</label>
                </div>
        }

    </div>

    <!-- Hidden userId to be sent with the form -->
    <input type="hidden" name="userId" value="@Model.UserId" />

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </div>
</form>

<div class="mt-3">
    <a href="@Url.Action("GetAllAccounts", "Admin")" class="btn btn-secondary">Back to User List</a>
</div>
