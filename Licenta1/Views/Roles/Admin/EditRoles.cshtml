@using DolphinsSunsetResort.Views.ViewsModel
@model EditRolesViewModel

@{
    ViewData["Title"] = "Edit Roles";
}

<div class="container mt-5">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <h3 class="card-title mb-4">Roles for @Model.FristName @Model.LastName</h3>
            <form method="post" asp-action="EditRoles">
                <div class="mb-3">
                    @foreach (var role in Model.Roles)
                    {
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="@role.Name" name="selectedRoles" value="@role.Name"
                               @(Model.UserRoles.Contains(role.Name) ? "checked" : "") />
                            <label class="form-check-label" for="@role.Name">@role.Name</label>
                        </div>
                    }
                </div>

                <!-- Hidden userId to be sent with the form -->
                <input type="hidden" name="userId" value="@Model.UserId" />

                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <a href="@Url.Action("GetAllAccounts", "Roles")" class="btn btn-secondary ms-2">Back to User List</a>
                </div>
            </form>
        </div>
    </div>
</div>
