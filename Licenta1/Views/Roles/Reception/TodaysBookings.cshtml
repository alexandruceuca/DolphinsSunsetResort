@using DolphinsSunsetResort.Models
@model IEnumerable<DolphinsSunsetResort.Models.Booking>

@{
    Layout = "/Views/Shared/_MenuLayout.cshtml";
}

<h3>Today's Bookings</h3>

<!-- Filter Inputs for Booking ID, Email, and Phone Number -->
<div class="row mb-4">
    <div class="col-12 col-md-4 mb-3 mb-md-0">
        <input type="text" id="bookingIdFilter" class="form-control" placeholder="Filter by Booking ID..." />
    </div>
    <div class="col-12 col-md-4 mb-3 mb-md-0">
        <input type="text" id="phoneFilter" class="form-control" placeholder="Filter by Phone Number..." />
    </div>
    <div class="col-12 col-md-4">
        <input type="text" id="emailFilter" class="form-control" placeholder="Filter by Email..." />
    </div>
</div>

<!-- Filter and Reset Buttons -->
<div class="row mb-4">
    <div class="col-12 col-md-12 d-flex justify-content-start justify-content-md-end gap-2">
        <button id="filterButton" class="btn btn-primary btn-sm">Filter</button>
        <button id="resetButton" class="btn btn-secondary btn-sm">Reset Filter</button>
    </div>
</div>

<!-- Bookings Table -->
<table class="table">
    <thead>
        <tr>
            <th>Booking Number</th>
            <th>CheckIn Date</th>
            <th>CheckOut Date</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Booking Status</th>
            <th></th>
        </tr>
    </thead>
    @await Component.InvokeAsync("TodaysBookingsList")
</table>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/js/filterTodaysBookings.js" asp-append-version="true"></script>
