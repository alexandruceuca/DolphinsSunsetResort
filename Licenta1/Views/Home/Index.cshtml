
@{
    ViewData["Title"] = "Home Page";
}

<main class="py-5 ">
    <!--Home section start-->
    <section class="Home">

        <div class="slide-show container d-flex justify-content-center">
            <div class="container-fluid img-slide-show">
                <div class="img-slide fade-animation">
                    <img src="images\slide-show\slide-show-1.jpg" alt="Slide-show-1">
                    <h3 class="text-img-home display-1">Expect the extraordinary</h3>
                </div>
                <div class="img-slide fade-animation">
                    <img src="images\slide-show\slide-show-2.jpg" alt="Slide-show-2">
                    <h3 class="text-img-home display-1">Your unforgettable getaway starts here</h3>
                </div>
                <div class="img-slide fade-animation">
                    <img src="images\slide-show\slide-show-3.jpg" alt="Slide-show-2">
                    <h3 class="text-img-home display-1">Enter a realm where wishes turn into reality</h3>
                </div>
                <div class="img-slide fade-animation">
                    <img src="images\slide-show\slide-show-4.jpg" alt="Slide-show-2">
                    <h3 class="text-img-home display-1">Discover serenity in our oasis of calm</h3>
                </div>
                <a class=" display-6" id="prevButton">&#10094;</a>
                <a class=" display-6" id="nextButton">&#10095;</a>
            </div>
        </div>

    </section>
    <!--Home section end-->

    <!--Home-about section start-->
    <section class="Home-About pe-3 py-2">
        <div class="container pe-sm-5">
            <div class="row">
                <div class="col-lg-6 ps-5 align-self-center">
                    <h1 class="display-5 py-4">About Us</h1>
                    <h3 class="display-6">
                        A Luxuries Hotel
                        with Nature
                    </h3>
                    <br>
                    <p class="lead text-strat">
                       At our hotel, luxury meets nature in perfect harmony. Nestled in a serene environment, 
                       we offer a peaceful retreat where you can unwind and enjoy world-class amenities. 
                       Whether you’re here for a relaxing getaway or a special celebration, 
                       our commitment to excellence ensures an unforgettable stay, surrounded by the beauty of the natural world.
                    </p>
                    <br>
                    <a class="link-secondary py-5" asp-controller="About" asp-action="Index">Learn More</a>
                </div>
                <div class="col-lg-3 pt-5 pb-2 ps-5 ">
                    <img src="images\about\about-1.jpg" alt="About-1" class="img-fluid">
                </div>
                <div class="col-lg-3 pt-2  ps-5 align-self-center">
                    <img src="images\about\about-2.jpg" alt="Aboout-2" class="img-fluid">
                </div>
            </div>

        </div>
    </section>
    <!--Home-about section end-->

    <!--Home-Facilities section start-->
    <section class="Home-Facilities py-2">
        <div class="container">
            <div class="row pt-4">
                <div class="col-md-12">
                    <h1 class="display-5 text-center">Our Facilities</h1>
                    <div class="row justify-content-center ">
                        <div class="col-md-3 card py-5 mx-lg-3">
                            <img src="images\our-facilities\pool.jpg" class="card-img-top" alt="">
                            <div class="card-body">
                                <h5 class="card-title fs-4">Pool</h5>
                                <p class="card-text fs-5">Relaxing needs a cool drink and even cooler water.</p>
                            </div>
                        </div>
                        <div class="col-md-3 card py-5 mx-lg-3">
                            <img src="images\our-facilities\spa.jpg" class="card-img-top" alt="">
                            <div class="card-body">
                                <h5 class="card-title fs-4">Spa</h5>
                                <p class="card-text fs-5">A day in heaven on Earth.</p>
                            </div>
                        </div>
                        <div class="col-md-3 card py-5 mx-lg-3">
                            <img src="images\our-facilities\bar.jpg" class="card-img-top" alt="">
                            <div class="card-body">
                                <h5 class="card-title fs-4">Bar</h5>
                                <p class="card-text fs-5">All inclusive Bar</p>
                            </div>
                        </div>
                        <div class="cold-md-3">
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>
    <!--Home-Facilities section end-->

    <!--Home-Food section start-->
    <section class="Home-Food py-3">
        <div class="container pe-sm-5">
            <div class="row">
                <div class="col-lg-3 pt-2 pb-2 pe-3 ">
                    <img src="images\home-food\home-food-1.jpg" alt="Home-Food-1" class="img-fluid">
                </div>
                <div class="col-lg-3 pt-2  ps-3 align-self-center">
                    <img src="images\home-food\home-food-2.jpg" alt="Home-Food-2" class="img-fluid">
                </div>
                <div class="col-lg-6 ps-5 align-self-center">
                    <h1 class="display-5 py-4">Delicius Food</h1>
                    <h3 class="display-6"> We Serve fresh and Delicious Food </h3>
                    <br>
                    <p class="lead text-strat">
                        Indulge in a culinary experience like no other. Our menu is crafted with the finest ingredients, 
                        offering fresh and delicious meals to satisfy every palate. 
                        From local specialties to international dishes, we promise a delightful dining experience in every bite.
                    </p>
                    <br>
                    <a class="link-secondary py-5" asp-controller="About" asp-action="Index">Learn More</a>
                </div>
            </div>

    </section>
    <!--Home-Food section end-->

    <!--Home-Rooms section start-->
    <section class="Home-rooms py-3">
        <div class="container">
            <div class="row ">
                @await Component.InvokeAsync("RoomsList", new { methodName = "DisplayRoomListHomeAsync" })
            </div>
        </div>
    </section>
    <!--Home-Rooms section end-->

</main>