@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-3 layout-reception">
    <div class="row">
        <!-- Sidebar or Menu for Reception -->
        <div class="col-12 col-md-4 col-lg-3 mt-5">
            <div class="card">
                <div class="card-body">
                    <!-- Sidebar Toggle Button (for mobile) -->
                    <button class="btn btn-primary d-md-none mb-3" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-expanded="false" aria-controls="sidebarMenu">
                        <i class="bi bi-list"></i> Menu
                    </button>

                    <!-- Collapsible Sidebar Menu -->
                    <div class="collapse d-md-block" id="sidebarMenu">
                        @Html.Partial("_Menu")  <!-- Include the reception menu -->
                    </div>
                </div>
            </div>
        </div>

        <!-- Main content area for Reception -->
        <div class="col-12 col-md-8 col-lg-9 mt-5">
            <div class="card">
                <div class="card-body">
                    <div class="row justify-content-center">
                        <div class="col-12 my-4">
                            @RenderBody()  <!-- The page-specific content will be injected here -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        $(function () {
            const currentPage = location.pathname;
            // Adjust the selector to target nav-link elements in the sidebar
            $('.nav-item a').each(function () {
                const $this = $(this);
                if (currentPage.toLowerCase().indexOf($this.attr('href').toLowerCase()) !== -1) {
                    $this.addClass('active');
                }
            });
        });
    </script>
}
