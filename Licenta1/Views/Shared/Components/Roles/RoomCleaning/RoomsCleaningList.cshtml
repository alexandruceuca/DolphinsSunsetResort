@model IEnumerable<Room>

@foreach (var room in Model)
{
    <div class="list-group-item d-flex justify-content-between align-items-center mb-3 " data-room-id="@room.RoomId">
        <!-- Room name and Room number -->
        <div>
            <strong>@room.Name</strong>
            <div class="text-muted">Room Number: @room.Number</div> <!-- Room number displayed below the name -->
        </div>

        <!-- Mark as Ready for Check-In Button -->
        <button class="btn btn-success btn-sm btn-mark-ready" data-room-id="@room.RoomId" data-url="@Url.Action("MarkAsReadyForCheckIn", "Roles")">
            Mark as Ready for Check-In
        </button>
    </div>
}
