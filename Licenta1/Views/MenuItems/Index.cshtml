@model IEnumerable<DolphinsSunsetResort.Models.MenuItem>

@{
    ViewData["Title"] = "Restaurant Menu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body class="pt-5">
    <div class="container">
        <h1 class="text-center mb-4">@ViewData["Title"]</h1>

        <!-- Create New Button -->
        <div class="mb-3 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New
            </a>
        </div>

        <!-- Responsive Table -->
        <div class="table-responsive">
            <table class="table table-hover table-striped align-middle">
                <thead class="table-primary">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Name)</th>
                        <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Description)</th>
                        <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Image)</th>
                        <th>Category</th>
                        <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Price)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Description)</td>
                            <td>
                                @if (item.Image != null)
                                {
                                    <img src="data:@item.Image.ContentType;base64,@Convert.ToBase64String(item.Image.Content)"
                                 alt="Menu Item Image"
                                 class="img-fluid border rounded"
                                 style="max-height: 100px;" />
                                }
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.MenuItemCategory.MenuItemCategoryName)</td>
                            <td>@Html.DisplayFor(modelItem => item.Price.BasePrice)</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.MenuItemId" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@item.MenuItemId" class="btn btn-sm btn-info text-white">
                                    <i class="bi bi-info-circle"></i> Details
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.MenuItemId" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
