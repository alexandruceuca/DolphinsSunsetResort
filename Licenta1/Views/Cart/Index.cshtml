@model DolphinsSunsetResort.Views.ViewsModel.BookingCartViewModel

<body class="pt-5">
    <div class="container">
        <h2>Your Cart</h2>

        <div id="update-message"></div>

        @if (Model != null && Model.CartItems.Any())
        {
            <div class="row">
                <!-- Cart Items Table -->
                <div class="col-md-8">
                    <table id="cartTable" class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Room</th>
                                <th>Check-In</th>
                                <th>Check-Out</th>
                                <th>Number of Breakfast</th>
                                <th>Price</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.CartItems)
                            {
                                <tr id="row-@item.RecordId">
                                    <td>@item.Room.Name</td>
                                    <td>@item.CheckInDate.ToShortDateString()</td>
                                    <td>@item.CheckOutDate.ToShortDateString()</td>
                                    <td>@item.BreakfastCount</td>
                                    <td>@item.Price.ToString("C")</td>
                                    <td>
                                        <a href="#" class="RemoveLink btn btn-danger btn-sm" data-id="@item.RecordId">
                                            Remove from cart
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Cart Summary -->
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Cart Summary</h5>
                            <p class="card-text">Total: <span id="cart-total">@Model.CartTotal.ToString("C")</span></p>
                                <a href="@Url.Action("Payment", "Checkout", new { checkindate = Model.CheckInDate, checkoutdate = Model.CheckOutDate })" class="btn btn-success w-100">
                                    Proceed to Checkout</a>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <p>Your cart is empty.</p>
        }
    </div>


</body>
    <script src="~/js/cart.js" asp-append-version="true"></script>