@model IEnumerable<Licenta1.Models.Room>
@{
	ViewData["Title"] = "Rooms";
}


<main class="py-5">
	<div class="Rooms">
		<div class="container justify-content-center">
			<img src="~/images/rooms/rooms-list.jpg" alt="Rooms" class="img-fluid">
			<h3 class="text-img-home display-1 pt-5">Rooms</h3>
		</div>
	</div>




	<!-- Date Range Picker -->
	<form method="get">
		<div class="row pt-5">
			<div class="col-md-4">
				<div class="input-group date" id="startDatePicker">
					<input type="text" class="form-control" placeholder="Start Date">
					<span class="input-group-text">
						<i class="fa-regular fa-calendar"></i>
					</span>
				</div>
			</div>
			<div class="col-md-4">
				<div class="input-group date" id="endDatePicker">
					<input type="text" class="form-control" placeholder="End Date">
					<span class="input-group-text">
						<i class="fa-regular fa-calendar"></i>
					</span>
				</div>
			</div>
			<div class="col-md-2">
				<button type="submit" class="btn btn-secondary">Filter</button>

			</div>
			<div class="col-md-2">
				<button type="submit" class="btn btn-secondary">Reset Filter</button>

			</div>
		</div>
	</form>


	<section class="py-3">
		<div class="container">
			<div class="row g-3">
				@await Component.InvokeAsync("RoomsList", new { methodName = "DisplayRoomListAsync" })
			</div>
		</div>
	</section>
</main>
<script src="~/js/datePicker.js" asp-append-version="true"></script>
